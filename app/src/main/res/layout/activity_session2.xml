<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_start"
    tools:context=".Session">

    <TextView
        android:id="@+id/textViewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/PlayButton2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:contentDescription="play1"
        app:srcCompat="@android:drawable/ic_media_play"/>


    <ImageButton
        android:id="@+id/NextButton"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="82dp"
        android:layout_toRightOf="@id/HomeButton"
        app:srcCompat="@android:drawable/ic_media_next"
        />
<!--
    <ImageButton
        android:id="@+id/PreviousButton"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginTop="610dp"
        android:layout_marginRight="70dp"
        android:layout_toLeftOf="@id/HomeButton"
        app:srcCompat="@android:drawable/ic_media_previous"
         />
-->
    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="220dp"
        android:layout_height="197dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/HomeButton"
        android:layout_width="48dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@color/transparent"
        app:srcCompat="@drawable/ic_home_icon" />


    <TextView
        android:id="@+id/scoreView"
        android:layout_width="202dp"
        android:layout_height="69dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp" />

    <TextView
        android:id="@+id/TextWrong"
        android:layout_width="93dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="450dp"
        android:layout_marginRight="225px"
        android:gravity="center"
        android:text="Incorrect"
        android:textColor="@color/colorWrong"
        android:textSize="22dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/TextRight"
        android:layout_width="85dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="225px"
        android:gravity="center"
        android:text="Correct"
        android:textColor="@color/colorRight"
        android:textSize="22dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/onCorrect"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_marginTop="499dp"
        android:layout_marginLeft="276px"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_session_correct"/>

    <ImageView
        android:id="@+id/onIncorrect"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="499dp"
        android:layout_marginRight="300px"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_session_incorrect" />

    <ImageView
        android:id="@+id/offCorrect"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="499dp"
        android:layout_marginLeft="276px"
        app:srcCompat="@drawable/ic_session_box"/>

    <ImageView
        android:id="@+id/offIncorrect"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="276px"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_session_box"/>

</RelativeLayout>