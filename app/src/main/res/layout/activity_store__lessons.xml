<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_start"
    android:id="@+id/LessonsHolder"
    android:orientation="vertical"
    tools:context=".Store_Lessons">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:text="TextView"
        android:textSize="35dp" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/textView2"
        android:layout_marginTop="20dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/AdaptLes1"
            android:layout_width="319dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="Lesson 1"
            android:contentDescription="Lesson1"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/EditBtn1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="1"
                android:text="Add" />

            <Button
                android:id="@+id/viewBtn1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="1"
                android:text="View" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/linear1"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AdaptLes2"
            android:layout_width="319dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="Lesson 2"
            android:contentDescription="Lesson2"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/EditBtn2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="2"
                android:text="Add" />
            <Button
                android:id="@+id/viewBtn2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="2"
                android:text="View" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/linear3"
        android:layout_below="@id/linear2"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AdaptLes3"
            android:layout_width="319dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="Lesson 3"
            android:contentDescription="Lesson3"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/EditBtn3"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="3"
                android:text="Add" />
            <Button
                android:id="@+id/viewBtn3"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="3"
                android:text="View" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/linear4"
        android:layout_below="@+id/linear3"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AdaptLes4"
            android:layout_width="319dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="Lesson 4"
            android:contentDescription="Lesson4"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/EditBtn4"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="4"
                android:text="Add" />

            <Button
                android:id="@+id/viewBtn4"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="4"
                android:text="View" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/linear5"
        android:layout_below="@+id/linear4"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AdaptLes5"
            android:layout_width="319dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="Lesson 5"
            android:contentDescription="Lesson5"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/EditBtn5"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="5"
                android:text="Add" />
            <Button
                android:id="@+id/viewBtn5"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="5"
                android:text="View" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/HomeButton"
        android:layout_gravity="center"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/linear5"
        android:layout_centerHorizontal="true"
        app:srcCompat="?attr/homeAsUpIndicator" />


</RelativeLayout>