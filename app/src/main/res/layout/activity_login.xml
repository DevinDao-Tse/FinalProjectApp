<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_start"
    android:orientation="vertical"
    tools:context=".Login">

    <!--android:background="#c7e8fb"-->




        <TextView
            android:id="@+id/loginView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:text="Login"
            android:textSize="@dimen/_29sdp" />

        <EditText
            android:id="@+id/LoginUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginView"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/_15sdp"
            android:hint="Enter Username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/LoginPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/LoginUser"
            android:ems="10"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/_15sdp"
            android:hint="Enter Password"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/rememberMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LoginPassword"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorWhite"
            android:text="Remember Me"
            android:textSize="@dimen/_15sdp"/>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_below="@id/RegisterView"
            android:onClick="LoginBtn"
            android:text="@string/login"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/RegisterView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/rememberMe"
            android:layout_marginTop="20dp"
            android:text="Don't Have a account? \nClick here to register"
            android:textSize="@dimen/_16sdp" />

</RelativeLayout>